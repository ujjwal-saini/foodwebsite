    <script>
        let cart_count = document.querySelector(".cart_count");
        let dishInfo = document.querySelector('#dishInfo');
        let dishName = document.querySelector('#dishName');
        let dishImage = document.querySelector("#dishImage");
        let dishPrice = document.querySelector(".dishprice");
        let inputsearch = document.querySelector("#searchInput");
        let shop = document.querySelector("#shop");

        let count_cart = 0;
        let dishes = [];
        let currentIndex = 0;
        fetch('/api/dishes')
            .then(res => res.json())
            .then(data => {
                dishes = data.dishes;
                showDish();
            });

        function showDish() {
            const dish = dishes[currentIndex];
            dishInfo.innerText = dish.description;
            dishName.innerText = dish.name;
            dishImage.src = dish.image;
            dishPrice.innerText = dish.price;
        }

        function nextSlide() {
            currentIndex = (currentIndex + 1) % dishes.length;
            showDish();
        }

        function prevSlide() {
            currentIndex = (currentIndex - 1 + dishes.length) % dishes.length;
            showDish();
        }

        function searchNow() {
            const searchTerm = inputsearch.value.toLowerCase();
            const filteredDishes = dishes.filter(dish => dish.name.toLowerCase().includes(searchTerm));
            if (filteredDishes.length > 0) {
                dishes = filteredDishes;
                currentIndex = 0;
                showDish();
            } else {
                alert("No dishes found matching your search.");
            }
        }

        function prepareCartData() {
            document.getElementById('cartDishName').value = dishes[currentIndex].name;
            document.getElementById('cartDishImage').value = dishes[currentIndex].image;
            document.getElementById('cartDishInfo').value = dishes[currentIndex].description;
            document.getElementById('cartDishPrice').value = dishes[currentIndex].price;
            console.log("Cart data prepared:", dishes[currentIndex]);
            return true;
        }

